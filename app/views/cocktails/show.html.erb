<div class="container">
  <div class="row row-cocktail">
    <div class="col-12">
      <div class="d-flex show-cocktail-title" style="margin-top: 5%">
        <h1><%= @cocktail.name %></h1>
      </div>
    </div>
    <div>
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 500, width: 1100, crop: :fill %>
      <% else %>
        <%= image_tag 'drink.png'%>
      <% end %>
    </div>

  </div>
  </div>
</div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-sm-12 col-md-6">

      <h4>Receipt</h4>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Dose</th>
              <th>Delete</th>
            </thead>

            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <%= icon('fa', 'trash') %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>

  <h4>Reviews</h4>
    <% if @cocktail.reviews.empty? %>
      <p>Be the first to let a review</p>
    <% else %>
      <ul class="list-group">
        <% @cocktail.reviews.each do |review| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span class="badge badge-primary badge-pill">
              <% counter = 0 %>
              <% 5.times do %>
                <i class="fa" <%= review.rating > counter ? 'fa-star' : 'fa=star-0' %>"></i>
                <% counter += 1 %>
              <% end %>
            </span>
            <%= review.content %>
          </li>
        <% end %>
      </ul>
    <% end %>

        <div class="flex-align">
        <p><%= link_to 'Add a new ingredient', edit_cocktail_path(@cocktail), class: "btn btn-light" %></p>
        <p><%= link_to 'Back to all cocktails', cocktails_path %></p>

          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <%= link_to 'https://www.facebook.com' do %>
              <%= icon('fab', 'facebook-square', class: 'fa-2x mr-2') %>
            <% end %>
            <%= link_to 'https://twitter.com' do %>
              <%= icon('fab', 'twitter-square', class: 'fa-2x mr-2') %>
            <% end %>
            <%= link_to 'https://pinterest.com' do %>
              <%= icon('fab', 'pinterest-square', class: 'fa-2x mr-2') %>
            <% end %>
            <%= link_to '#' do %>
              <%= icon('fa', 'envelope-square', class: 'fa-2x') %>
            <% end %>
          </div>
      </div>

  </div>


