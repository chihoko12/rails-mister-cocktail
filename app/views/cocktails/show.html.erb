<div class="banner cocktail-name" style="background-image: linear-gradient(rgba(40,40,40,0.8), rgba(40,40,40,0.8)), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
  <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-sm-12 col-md-6">

      <div class="cocktail-show-card">
        <h4>Receipt</h4>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Dose</th>
              <th>Delete</th>
            </thead>

        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <%= icon('fa', 'trash') %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
        </table>
      </div>

<!--       <div class="col-sm-12 col-md-6">
        <%=# render "doses/new", cocktail: @cocktail, dose: @dose %>
      </div> -->
    </div>

        <div class="btn button-primary">Edit</div>
        <p><%= link_to 'Add a new ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-light" %></p>
        <p><%= link_to 'Back to all cocktails', cocktails_path %></p>

      </div>
    </div>

    <div class="col-4">
      <div class="cocktail-show-card">


        </div>

        <div class="flex-align">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <%= link_to 'https://www.facebook.com' do %>
              <%= icon('fab', 'facebook-square', class: 'fa-2x mr-2') %>
            <% end %>
            <%= link_to 'https://twitter.com' do %>
              <%= icon('fab', 'twitter-square', class: 'fa-2x mr-2') %>
            <% end %>
            <%= link_to 'https://pinterest.com' do %>
              <%= icon('fab', 'pinterest-square', class: 'fa-2x mr-2') %>
            <% end %>
            <%= link_to '#' do %>
              <%= icon('fa', 'envelope-square', class: 'fa-2x') %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
