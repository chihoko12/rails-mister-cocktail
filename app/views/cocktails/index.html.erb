<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our cocktails</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @cocktails.count %> flats out of our <%= Cocktail.count %> on our website.</p>
      <% else %>
        <p>All <%= Cocktail.count %> <%= Cocktail.count == 1 ? 'cocktail' : 'cocktails' %>.</p>
      <% end %>
    </div>
  </div>
  <%= link_to 'Add a cocktail', new_cocktail_path, class: "btn btn-primary btn-lg" %>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="cocktail-card">
          <div class="cocktail-card-image" style="background-image: url('https://source.unsplash.com/500x400/?cocktail');"></div>
          <div class="cocktail-card-content">
            <div class="cocktail-card-title">
              <h4><%= cocktail.name %></h4>
            </div>
          </div>
          <div class="cocktail-card-actions">
            <%= link_to 'More info', cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
