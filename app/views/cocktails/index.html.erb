<div class="banner" style="background-image: linear-gradient(rgba(40,40,40,0.8), rgba(40,40,40,0.8)), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
  <h1>mister cocktail</h1>
  <p>find and share your favorite cocktail</p>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>

  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
     <div class="search-form-control form-group line-inline">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
      <h2>All our cocktails</h2>
      <div class="search">
        <% if @query %>
          <h4>You searched for <strong><%= @query %></strong>. We found <%= @cocktails.count %> flats out of our <%= Cocktail.count %> on our website.</h4>
        <% else %>
          <h4>All <%= Cocktail.count %> <%= Cocktail.count == 1 ? 'cocktail' : 'cocktails' %>.</h4>
        <% end %>
      </div>
  </div>

  <div class="row">
        <% @cocktails.each do |cocktail| %>
            <div class="col-12 col-md-6 col-lg-3">

          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/500x400/?cocktail');">
            <div class="card-description">
              <%= link_to cocktail_path(cocktail) do%>
              <h2><%= cocktail.name %></h2>
              <% end %>
            </div>
          </div>
      </div>
        <% end %>
    </div>

  </div>
